---
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | FreshBites</title>
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="flex min-h-screen">
    <!-- Left Side - Image/Brand -->
    <div class="hidden md:flex md:w-1/2 bg-green-500 items-center justify-center p-10">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white mb-4">FreshBites</h1>
        <p class="text-white text-lg">Tu marketplace de comida fresca y saludable</p>
      </div>
    </div>
    
    <!-- Right Side - Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-5">
      <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-bold text-gray-800">{title}</h2>
        </div>
        
        <slot />
      </div>
    </div>
  </div>
</body>
</html>